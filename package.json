{
  "name": "gracey",
  "version": "1.0.0",
  "description": "Management frontend for grace",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "out/electron/index.js",
  "scripts": {
    "build": "tsc && esbuild src/website/renderer.tsx --bundle --outfile=out/website/renderer.js --platform=browser && cp -r ./src/website/static/* ./out/website/static/",
    "watch:tsc": "tsc -w",
    "watch:esbuild": "esbuild src/website/renderer.tsx --bundle --outfile=out/website/renderer.js --platform=browser --watch",
    "watch": "concurrently \"npm run watch:tsc\" \"npm run watch:esbuild\"",
    "start": "electron .",
    "dev": "npm run build && concurrently \"npm run watch\" \"npm start\""
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.4",
    "esbuild": "^0.25.8",
    "esbuild-runner": "^2.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-simple-code-editor": "^0.14.1",
    "react-syntax-highlighter": "^15.6.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6"
  }
}
